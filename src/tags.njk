---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - tagList
permalink: /tags/{{ tag }}/
layout: layout.njk
---

<h1>{{ tag }}</h1>
<hr>

<ul>
{% for post in collections[tag] | reverse %}
  <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
{% endfor %}
</ul>
<hr>
<a href="/">Home</a>
